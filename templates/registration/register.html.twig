{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mx-auto flex items-center justify-center h-screen">
        <div class="border-2 border-black rounded-lg w-1/3 py-8 px-4">
            <h1 class="text-2xl font-bold text-center mb-6">Register</h1>

            <div class="max-w-sm mx-auto">
                {{ form_errors(registrationForm) }}
                {{ form_start(registrationForm, { 'attr': { 'class': 'space-y-5' } }) }}

                <div class="mb-5">
                    {{ form_label(registrationForm.email, 'Your email', { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-black' } }) }}
                    {{ form_widget(registrationForm.email, { 'attr': { 'class': 'bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' } }) }}
                </div>

                <div class="mb-5">
                    {{ form_label(registrationForm.plainPassword, 'Your password', { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-black' } }) }}
                    {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' } }) }}
                </div>

                <div class="flex items-start mb-5">
                    {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'w-4 h-4 border border-gray-300 rounded bg-gray-50' } }) }}
                    {{ form_label(registrationForm.agreeTerms, 'Agree to terms', { 'label_attr': { 'class': 'ms-2 text-sm font-medium text-gray-900' } }) }}
                </div>

                <button type="submit"
                        class="text-black bg-white border border-black hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm w-full px-5 py-2.5 text-center">
                    Register
                </button>
                {{ form_end(registrationForm) }}

                <div class="text-center mt-4">
                    <a href="{{ path('app_login') }}" class="text-black hover:text-gray-800 text-sm">Already have an
                        account? Login</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app_css') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}